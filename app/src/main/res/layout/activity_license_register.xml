<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".License_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D92A1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="면허 등록"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="면허 숫자"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/License_number"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_marginTop="50dp"
            android:background="#3D92A1"/>


        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="면허 종류"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/emailTexT"
            android:drawableStart="@drawable/baseline_mail_outline_24"
            android:drawableLeft="@drawable/baseline_mail_outline_24"
            android:layout_marginTop="50dp"
            android:background="#3D92A1"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="발급 기간"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/id_pass"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_marginTop="50dp"
            android:background="#3D92A1"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Spinner
                    android:id="@+id/license_numtype"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:entries="@array/license_numtype"></Spinner>
                <Spinner
                    android:id="@+id/license_type"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:entries="@array/license_1type"></Spinner>
        </LinearLayout>
        <Button
            android:layout_marginVertical="70dp"
            android:id="@+id/license_regi"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3D92A1"
            android:text="License Register"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>